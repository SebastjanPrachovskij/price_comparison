<!-- Inside app/views/home/search_history.html.erb -->
<tbody>
  <% @results.each_with_index do |result, index| %>
    <tr>
      <th scope="row"><%= index + 1 %></th>
      <td><%= result.query %></td>
      <td><%= result.location %></td>
      <td><%= result.title %></td>
      <td><%= result.price %></td>
      <td><%= link_to 'View', product_graph_path(result.id), target: '_blank' %></td>
    </tr>
  <% end %>
</tbody>
